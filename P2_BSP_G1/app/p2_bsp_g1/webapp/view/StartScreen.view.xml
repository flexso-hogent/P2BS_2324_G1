<mvc:View controllerName="p2bspg1.controller.StartScreen"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" displayBlock="true">

	<Page id="StartScreen" title="Home" class="customHeader">
		<!-- <headerContent>
						<SearchField width="50%" placeholder="Search..." search=".onSearch" />
						<Button icon="sap-icon://bell" press=".onNotificationPress" />
						<Avatar initials="JD" displaySize="XS" press=".onProfilePress" />
				</headerContent> -->

		<content>
			<FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
				<Panel width="40vw" backgroundDesign="Translucent">
					<content>
						<VBox alignItems="Center">
							<Title level="H3" text="Welkom" />

							<FlexBox wrap="Wrap" justifyContent="SpaceAround" alignItems="Start" width="100%">
								<GenericTile header="Overzicht evenementen" press=".onEvents">
									<TileContent footer="">
										<ImageContent src="sap-icon://customer-view"/>
									</TileContent>
								</GenericTile>
								<GenericTile header="Event details" press=".onEventsDetails">
									<TileContent footer="">
										<ImageContent src="sap-icon://detail-view"/>
									</TileContent>
								</GenericTile>
								<GenericTile header="Nieuw event aanmaken" press=".onEventsNew">
									<TileContent footer="">
										<ImageContent src="sap-icon://create"/>
									</TileContent>
								</GenericTile>
								<GenericTile header="Mijn Evenementen" press=".onMyEvents">
									<TileContent footer="">
										<ImageContent src="sap-icon://activities"/>
									</TileContent>
								</GenericTile>
								<GenericTile header="Nieuwe sessie aanmaken" press=".onNewSessie">
									<TileContent footer="">
										<ImageContent src="sap-icon://create-session"/>
									</TileContent>
								</GenericTile>
							</FlexBox>

						</VBox>
					</content>
				</Panel>
			</FlexBox>
		</content>

				<footer > 
						<Bar class="customFooter">
								<contentLeft>
										<Image src="image/LogoSAP.png" class="logoStyle" width="100px" height="auto"/>
										<Label text="Powered by SAP Cloud Platform"/>
								</contentLeft>
								<contentRight>
										<Link text="Legal Disclosure" href="https://www.sap.com/corporate/en/legal/impressum.html"/>
										<Link text="Privacy" href="https://www.sap.com/corporate/en/legal/privacy.html"/>
										<Link text="Terms of Use" href="https://www.sap.com/corporate/en/legal/terms-of-use.html"/>
										<!-- Geen plaats voor beide icons, alleen de eerste wordt meegegeven -->
										<Button icon="sap-icon://home" press=".onHomePress" />
										<!-- <Button icon="sap-icon://log" press=".onLogoutPress" /> -->
								</contentRight>
						</Bar>
				</footer>
    </Page>
</mvc:View>
