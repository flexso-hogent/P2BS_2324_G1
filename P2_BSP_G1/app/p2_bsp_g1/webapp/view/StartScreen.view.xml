<mvc:View controllerName="p2bspg1.controller.StartScreen"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    displayBlock="true">
	
    <Page id="StartScreen" title="Home" class="customHeader">	
				<!-- <headerContent>
						<SearchField width="50%" placeholder="Search..." search=".onSearch" />
						<Button icon="sap-icon://bell" press=".onNotificationPress" />
						<Avatar initials="JD" displaySize="XS" press=".onProfilePress" />
				</headerContent> -->

				<content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="StartScreen" />

														<FlexBox wrap="Wrap" justifyContent="SpaceAround" alignItems="Start" width="100%">
																<GenericTile 
																	header="Overzicht evenementen"
																	press=".onEvents">
																	<TileContent footer="Navigation"/>
																</GenericTile>
																<GenericTile 
																	header="Event details"
																	press=".onEventsDetails">
																	<TileContent footer="Navigation"/>
																</GenericTile>
																<GenericTile 
																	header="Nieuw event aanmaken"
																	press=".onEventsNew">
																	<TileContent footer="Navigation"/>
																</GenericTile>
														</FlexBox>

                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>

				<footer> 
						<Bar>
								<contentLeft>
										<Title level="H4" text="Flexso"></Title>
										<Label text="Powered by SAP Cloud Platform"/>
								</contentLeft>
								<contentRight>
										<Label text="Copyright"/>
										<Label text="Privacy"/>
										<Label text="Legal Disclosure"/>
										<Button icon="sap-icon://home" press=".onHomePress" />
										<Button icon="sap-icon://log" press=".onLogoutPress" />
								</contentRight>
						</Bar>
				</footer>
    </Page>
</mvc:View>
