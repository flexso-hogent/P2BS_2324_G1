<mvc:View controllerName="p2bspg1.controller.App"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="appg" class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
				<Button icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press="onCollapseExpandPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Image src="image/LogoFlexso.jpg" decorative="false" press="onLogoPressed">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Image>
				<ToolbarSpacer />
				<Title text="Flexso events" wrapping="false" id="productName">
					<layoutData>
						<OverflowToolbarLayoutData priority="Disappear"/>
					</layoutData>
				</Title>
				<ToolbarSpacer />

				<tnt:ToolHeaderUtilitySeparator/>
				<ToolbarSpacer width="1.125rem"/>
				<Avatar src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Avatar>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="false">
				<tnt:NavigationList>
					<tnt:NavigationListItem text="Home" icon="sap-icon://home" href="#/StartScreen"/>
					<tnt:NavigationListGroup text="Evenementen">
						<tnt:NavigationListItem text="Overzicht evenementen" icon="sap-icon://legend" href="#/Events"/>
						<tnt:NavigationListItem text="Nieuw evenement" icon="sap-icon://add-calendar" href="#/Events#/new" visible="false" id="av1" />
					</tnt:NavigationListGroup>
					<tnt:NavigationListGroup text="Sessies" visible="false" id="av2">
						<tnt:NavigationListItem text="Nieuwe sessie" icon="sap-icon://create-session" href="#/Sessies#/new" />
					</tnt:NavigationListGroup>
					<tnt:NavigationListGroup text="Feedback" visible="false" id="av3">
						<tnt:NavigationListItem text="Alle feedback" icon="sap-icon://discussion" href="#/FeedbackGeven" />

					</tnt:NavigationListGroup>

				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListGroup text="Terms and services">
							<tnt:NavigationListItem text="Legal" icon="sap-icon://compare-2" target="_blank" href="https://www.sap.com/corporate/en/legal/impressum.html"/>
							<tnt:NavigationListItem text="Privacy" icon="sap-icon://locked" target="_blank" href="https://www.sap.com/corporate/en/legal/privacy.html"/>
							<tnt:NavigationListItem text="Terms" icon="sap-icon://document" target="_blank" href="https://www.sap.com/corporate/en/legal/terms-of-use.html"/>

						</tnt:NavigationListGroup>
						<tnt:NavigationListGroup text="Mijn profiel" visible="false" id="uv1">
							<tnt:NavigationListItem text="Mijn profiel" icon="sap-icon://key-user-settings" href="#/Profiel" />
							<tnt:NavigationListItem text="Mijn inschrijvingen" icon="sap-icon://notes" href="#/MijnEvents" />
							<tnt:NavigationListItem text="Uitloggen" icon="sap-icon://log" select="onLogOut" visible="false" id="uv2" />
						</tnt:NavigationListGroup>

						<tnt:NavigationListItem text="Inloggen" icon="sap-icon://log" select="onLogOut" visible="false" id="loginView" />
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="app">
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<l:content>
						<Link text="Overzicht evenementen" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/Events/" />
						<Link text="Registreer" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/Registreer/" />
						<Link text="Evenementdetailpagina" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/Events/1" />
						<Link text="Maak evenement aan" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/Events#/new" />
						<Link text="Login" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/Login/" />
						<Link text="Start scherm" target="_blank" href="http://localhost:4004/p2_bsp_g1/webapp/index.html#/StartScreen/" />
						<Image src="../image/LogoFlexso.jpg" decorative="false" press="onLogoPressed">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Image>

					</l:content>
				</l:VerticalLayout>
			</App>

		</tnt:mainContents>

	</tnt:ToolPage>

</mvc:View>
