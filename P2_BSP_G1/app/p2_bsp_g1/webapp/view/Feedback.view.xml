<mvc:View controllerName="p2bspg1.controller.Feedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:t="sap.ui.table" displayBlock="true">

    <Page id="Feedback">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" width="100%">
                <Table id="feedbackTable" selectionChange=".onSelectionChange" inset="false" items="{
						path: '/Scores',
                        sorter: {
                            path: 'inschrijvingID/sessieID_sessieID',
                            descending: false
                        }
					}">
                    <infoToolbar>
                        <OverflowToolbar visible="false" id="idInfoToolbar">
                            <Label id="idFilterLabel" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="EvenementID"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="ScoreID"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="GebruikerID"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="InschrijvingID"/>
                        </Column>
                        
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Aantal sterren"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="feedback"/>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem vAlign="Middle" type="Navigation" press="handleListItemPress">
                            <cells>
                                <ObjectIdentifier title="{inschrijvingID/sessieID/evenement/naam}" text="{inschrijvingID/sessieID/naam}" />
                                <Text text="{scoreID}" />
                                <Text text="{gebruikerID_gebruikerID}" />
                                <Text text="{inschrijvingID_inschrijvingID}" />

                                <Text text="{aantalSterren}" />
                                <Text text="{feedback}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
