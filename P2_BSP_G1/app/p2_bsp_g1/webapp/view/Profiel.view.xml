<mvc:View controllerName="p2bspg1.controller.Profiel"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:m="sap.m" height="100%">
    
    <Page id="Gebruiker" title="Gebruiker">
            <content>
                <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                    <Panel width="40vw" backgroundDesign="Translucent">
                        <content>
                            <VBox alignItems="Center">
                                <Title level="H3" text="Mijn profiel" />
                                <Image src="image/LogoFlexso.jpg" decorative="false" width="7.5vw" ></Image>
                                <Text text="{voornaam} {naam}" />
								<Text text="{email}" />
								<Text text="{geboortedatum}" />
                                <HBox >
                                    <Button text="Terug" type="Default" press=".onTerug" class="ButtonStyle"/>
                                    <Button text="Wijzig" type="Accept" press=".onWijzig" class="ButtonStyle" />
                                </HBox>                              
                            </VBox>
                        </content>
                    </Panel>
                </FlexBox>
            </content>
    </Page>

</mvc:View>
