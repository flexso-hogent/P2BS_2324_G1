<mvc:View controllerName="p2bspg1.controller.Profiel"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:m="sap.m" height="100%">
    
    <Page id="Gebruiker" title="Gebruiker">
        <f:DynamicPage>
            <f:content>
                <Table id="gebruikerTable" items="{
                    path: '/Gebruikers'
                }">
                    <columns>
                        <Column>
                            <Text text="Gebruiker ID" />
                        </Column>
                        <Column>
                            <Text text="Voornaam" />
                        </Column>
                        <Column >
                            <Text text="Achternaam" />
                        </Column>
                        <Column>
                            <Text text="Email" />
                        </Column>
                        <Column>
                            <Text text="Geboortedatum" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Navigation" press="handleListItemPress">
							<cells>
								<ObjectIdentifier title="{loggedInUserModel>/gebruikerID}" />
								<Text text="{loggedInUserModel>/voornaam}"/>
                                <Text text="{loggedInUserModel>/achternaam}"/>
								<Text text="{loggedInUserModel>/email}" />
								<Text text="{loggedInUserModel>/geboortedatum}" />
							</cells>
						</ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    </Page>

</mvc:View>
