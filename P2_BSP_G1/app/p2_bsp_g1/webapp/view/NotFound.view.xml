<mvc:View controllerName="p2bspg1.controller.NotFound"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="NotFound">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="404: Page not found" />
                            <Text text="Het lijkt erop dat we deze pagina niet kunnen vinden." />
                            <Button text="Terug naar home" press=".onHome" />
                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>