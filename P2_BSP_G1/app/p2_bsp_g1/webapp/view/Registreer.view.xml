<mvc:View controllerName="p2bspg1.controller.Registreer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="Registreer" title="Registreer">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="Registreer" />
                            <Label text="Voornaam" labelFor="voornaam" required="true"/>
                            <Input id="voornaam" width="100%" class="input" placeholder="" value="{form>/voornaam}" />
                            <Label text="Achternaam" labelFor="achternaam" required="true"/>
                            <Input id="achternaam" width="100%" class="input" value="{form>/achternaam}"/>
                            <Label text="Email" labelFor="email" required="true"/>
                            <Input id="email" width="100%" class="input" value="{form>/email}"/>
                            <Label text="Geboortedatum" labelFor="geboortedatum" required="true"/>
                            <DatePicker id="geboortedatum" width="100%" class="input" value="{form>/geboortedatum}" valueFormat="yyyy-MM-dd" />
                            <Label text="Wachtwoord" labelFor="wachtwoord" required="true"/>
                                <HBox class="input">
                                    <Input id="wachtwoord" type="Password" width="100%" class="input" value="{form>/wachtwoord}"/>
                                    <Button icon="sap-icon://show" press=".onSeePassword" />
                                </HBox>
                            <Label text="Herhaal wachtwoord" labelFor="herhaalWachtwoord" required="true"/>
                                <HBox class="input">
                                    <Input id="herhaalWachtwoord" type="Password" class="input" width="100%" value="{herhaalWachtwoord}"/>
                                    <Button icon="sap-icon://show" press=".onSeePasswordHerhaal" />
                                </HBox>
                            <Button text="Registreer" type="Accept" press=".onRegister" />
                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
