<mvc:View controllerName="p2bspg1.controller.Registreer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m" displayBlock="true">

    <Page id="Registreer" title="Registreer">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%" >
                <Panel width="35vw" backgroundDesign="Translucent" class="flexboxRegistreer">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="Registreer" />
                            <Image src="image/LogoFlexso.jpg" decorative="false" width="7.5vw" ></Image>
                            <Label text="Voornaam" labelFor="voornaam" required="true" class="input"/>
                            <Input id="voornaam" width="100%" class="input" placeholder="voornaam" value="{form>/voornaam}" />
                            <Label text="Achternaam" labelFor="achternaam" required="true" class="input"/>
                            <Input id="achternaam" width="100%" class="input" value="{form>/achternaam}" placeholder="achternaam"/>
                            <Label text="Email" labelFor="email" required="true" class="input"/>
                            <Input id="email" width="100%" class="input" value="{form>/email}" placeholder="bv. tom@gmail.com"/>
                            <Label text="Geboortedatum" labelFor="geboortedatum" required="true" class="input"/>
                            <DatePicker id="geboortedatum" width="100%" class="input" value="{form>/geboortedatum}" valueFormat="yyyy-MM-dd" placeholder="bv. 1995-06-05"/>
                            <Label text="Wachtwoord" labelFor="wachtwoord" required="true" class="input"/>
                                <HBox class="input">
                                    <Input id="wachtwoord" type="Password" width="100%" class="input" value="{form>/wachtwoord}"/>
                                    <Button icon="sap-icon://show" press=".onSeePassword" />
                                </HBox>
                            <Label text="Herhaal wachtwoord" labelFor="herhaalWachtwoord" required="true" class="input"/>
                                <HBox class="input">
                                    <Input id="herhaalWachtwoord" type="Password" class="input" width="100%" value="{herhaalWachtwoord}"/>
                                    <Button icon="sap-icon://show" press=".onSeePasswordHerhaal" />
                                </HBox>
                            <HBox >
                                <Button text="Terug" type="Default" press=".onTerug" class="ButtonStyle"/>
                                <Button text="Registreer" type="Accept" press=".onRegister" class="ButtonStyle" />
                            </HBox>
                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
