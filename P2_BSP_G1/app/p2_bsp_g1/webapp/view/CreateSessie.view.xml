<mvc:View controllerName="p2bspg1.controller.CreateSessie"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m" displayBlock="true">

    <Page id="createSessie" title="Nieuwe sessie aanmaken">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="50vw" backgroundDesign="Translucent">
                    <content >
                        <VBox alignItems="Center">
                            <Title level="H3" text="Creeër sessie" />
                            <Image src="image/LogoFlexso.jpg" decorative="false" width="7.5vw"></Image>
                            <Label text="Naam Sessie" class="input" labelFor="naam" />
                            <Input id="naam" class="input" width="100%" placeholder="Naam sessie" value="{form>/naam}" />
                            <Label text="Datum" class="input" labelFor="datum" />
                            <DatePicker id="datum" class="input" width="100%" value="{form>/datum}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
                            <Label text="Beginuur" class="input" labelFor="beginUur" />
                            <TimePicker id="beginUur" class="input" width="100%" value="{form>/beginUur}" valueFormat="hh:mm" displayFormat="hh:mm" />
                            <Label text="Einduur" class="input" labelFor="eindUur" />
                            <TimePicker id="eindUur" class="input" width="100%" value="{form>/eindUur}" valueFormat="hh:mm" displayFormat="hh:mm" />
                            <Label text="Spreker" class="input" labelFor="spreker" />
                            <Input id="spreker" class="input" width="100%" value="{form>/spreker}" />
                            <Label text="Korte beschrijving" class="input" labelFor="korteInhoud" />
                            <TextArea id="korteInhoud" value="{form>/korteInhoud}" class="input" showExceededText="true" maxLength="500" width="100%" valueLiveUpdate="false" liveChange="handleLiveChange" />
                        </VBox>
                    </content>
                    <l:HorizontalLayout class="btncreate">
                        <Button text="Annuleer" type="Transparent" press="annuleer" />
                        <Button text="Creëer evenement" class="create" type="Emphasized" press="createSessie"/>
                    </l:HorizontalLayout>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>

