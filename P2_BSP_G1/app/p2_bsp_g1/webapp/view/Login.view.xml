<mvc:View controllerName="p2bspg1.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="Login" title="Login">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="Login" />
                            <Label text="Email" labelFor="email" required="true"/>
                            <Input id="email" width="100%" value="{form>/email}"/>
                            <Label text="Wachtwoord" labelFor="wachtwoord" required="true" />
                                <HBox >
                                    <Input id="wachtwoord" type="Password" width="100%" value="{form>/wachtwoord}"/>
                                    <Button text="See Password" press=".onSeePassword" />
                                </HBox>
                            <CheckBox id="keepSignedIn" selected="{form>/keepSignedIn}" text="Keep me signed in" ></CheckBox>
                            <Link text="Forgot Password" press=".onForgotPassword" />
                            <Link text="No account yet? Sign up here!" press=".onRegister" />
                            <Button text="Sign in" type="Accept" press=".onLogin" />
                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
