<mvc:View controllerName="p2bspg1.controller.SessieDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m" height="100%">
    <ObjectPageLayout id="ObjectPageLayout" isChildPage="true" upperCaseAnchorBar="false">

        <headerTitle>
            <ObjectPageHeader id="header" objectTitle="{naam}" objectSubtitle="{evenement/naam}">
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" class="horizontalLayout">
                <m:items>
                    <layout:VerticalLayout >
                        <layout:HorizontalLayout >
                            <core:Icon src="sap-icon://employee" class="size2">
                                <core:layoutData>
                                    <m:FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                            <m:Text text="{spreker}" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout >
                            <core:Icon src="sap-icon://calendar" class="size2">
                                <core:layoutData>
                                    <m:FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                            <m:Text text="{datum}" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout >
                            <core:Icon src="sap-icon://away" class="size2">
                                <core:layoutData>
                                    <m:FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                            <m:Text text="{beginUur} - {eindUur}"  />
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>

                </m:items>
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Button text="Pas sessie aan" type="Attention" press="editSessie" visible="false" id="av3"/>
                    <m:Button text="Verwijder sessie" type="Reject" press="deleteSessie" visible="false" id="av4" />
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection titleUppercase="false" id="personal" title="Session">
                <subSections>
                    <ObjectPageSubSection id="personalSS1" title="Meer info" titleUppercase="false">
                        <blocks>
                            <m:Text text="{korteInhoud}" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
                <subSections>
                    <ObjectPageSubSection title="Overzicht event" titleUppercase="false">
                        <blocks>
                            <m:Button text="Terug" type="Default" press=".onTerug"/>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
