<mvc:View controllerName="p2bspg1.controller.EventDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m" height="100%">
    <ObjectPageLayout id="ObjectPageLayout" isChildPage="true" upperCaseAnchorBar="false">

        <headerTitle>
            <ObjectPageHeader id="header" objectTitle="{naam}">
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" class="horizontalLayout">
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <layout:HorizontalLayout>
                        <core:Icon src="sap-icon://map" class="size2">
                            <core:layoutData>
                                <m:FlexItemData growFactor="1" />
                            </core:layoutData>
                        </core:Icon>
                        <m:Label text="{locatie}" class="sapUiSmallMarginBeginEnd" />
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout>
                        <core:Icon src="sap-icon://calendar" class="size2">
                            <core:layoutData>
                                <m:FlexItemData growFactor="1" />
                            </core:layoutData>
                        </core:Icon>
                        <layout:VerticalLayout>
                            <m:Label text="{beginDatum} - {beginUur}" class="sapUiSmallMarginBeginEnd" />
                            <m:Label text="{eindDatum} - {eindUur}" class="sapUiSmallMarginBeginEnd" />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout>
                        <core:Icon src="sap-icon://group" class="size2">
                            <core:layoutData>
                                <m:FlexItemData growFactor="1" />
                            </core:layoutData>
                        </core:Icon>
                        <m:Label text="Max. {maxAantalInschrijvingen} deelnemers" class="sapUiSmallMarginBeginEnd" />
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout>
                        <core:Icon src="sap-icon://money-bills" class="size2">
                            <core:layoutData>
                                <m:FlexItemData growFactor="1" />
                            </core:layoutData>
                        </core:Icon>
                        <m:Label text="â‚¬ {prijs} inkom" class="sapUiSmallMarginBeginEnd" />
                    </layout:HorizontalLayout>
                </layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Button text="Terug" type="Default" press=".onTerug"/>
                    <m:Button text="Voeg een sessie toe" type="Emphasized" press="addSessie" visible="false" id="av1" />
                    <m:Button text="Bekijk feedback" type="Emphasized" press="seeFeedback" visible="false" id="av2" />
                    <m:Button text="Pas evenement aan" type="Attention" press="onEventPressEdit" visible="false" id="av3"/>
                    <m:Button text="Verwijder evenement" type="Reject" press="deleteEvent" visible="false" id="av4" />
                </layout:VerticalLayout>


            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection titleUppercase="false" id="personal" title="Session">
                <subSections>
                    <ObjectPageSubSection id="personalSS1" title="Beschikbare sessies" titleUppercase="false">
                        <m:Table id="sessiestable" selectionChange=".onSelectionChange" inset="false" items="{
			path: 'sessies',
			sorter: {
				path: 'datum'

			}
		}">
                            <m:columns>
                                <m:Column width="12em">
                                    <m:Text text="Naam sessie" />
                                </m:Column>
                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                    <m:Text text="Korte inhoud" />
                                </m:Column>
                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                    <m:Text text="Datum" />
                                </m:Column>
                                <m:Column minScreenWidth="Tablet" demandPopin="true">
                                    <m:Text text="Tijdstip" />
                                </m:Column>
                                <m:Column demandPopin="true">
                                </m:Column>


                            </m:columns>
                            <m:items>
                                <m:ColumnListItem vAlign="Middle" press="handleListItemPress" type="Navigation">
                                    <m:cells>
                                        <m:ObjectIdentifier title="{naam}" text="Door {spreker}"/>
                                        <m:Text text="{korteInhoud}" />
                                        <m:Text text="{datum}" />
                                        <m:Text text="{beginUur} - {eindUur}" />
                                        <m:Button id="_IDGenButton1" text="Registreer voor deze sessie" type="Emphasized" press="signUp" />
                                    </m:cells>
                                </m:ColumnListItem>
                            </m:items>
                        </m:Table>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
