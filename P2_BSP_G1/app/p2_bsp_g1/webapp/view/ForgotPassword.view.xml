<mvc:View controllerName="p2bspg1.controller.ForgotPassword"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="ForgotPassword" title="ForgotPassword">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%" width="100%">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Title level="H3" text="Forgot Your Password?" />
                            <Text text="Enter your email and we'll email you a new password. The email might take a few minutes to reach your inbox."></Text>
                            <Label text="Email" labelFor="email" required="true"/>
                            <Input id="email" width="100%" value="{form>/email}"/>
                            <HBox >
                                <Button text="Cancel" press=".onCancel"/>                       
                                <Button text="Request Password" type="Accept"/>
                            </HBox>

                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
