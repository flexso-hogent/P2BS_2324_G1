<mvc:View controllerName="p2bspg1.controller.ForgotPassword"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m" displayBlock="true">

    <Page id="ForgotPassword" title="Forgot Your Password?">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" width="100%" class="panel">
                <Panel width="40vw" backgroundDesign="Translucent">
                    <content>
                        <VBox alignItems="Center">
                            <Image src="image/LogoFlexso.jpg" decorative="false" width="7.5vw" class="flexsoImg"></Image>
                            <Text text="Enter your email and we'll email you a new password." />
                            <Text text="The email might take a few minutes to reach your inbox."/>
                            <Text text=" "/>
                            <l:VerticalLayout class="inputGroup">
                                <Label text="Email" labelFor="email" required="true" class="input"/>
                                <Input id="email" width="100%" value="{form>/email}" class="input"/>
                            </l:VerticalLayout>
                        </VBox>
                        <l:HorizontalLayout class="btncreate buttonWidth">
                            <Button text="Cancel" press=".onCancel" class="btncreate"/>
                            <Button text="Request Password" type="Accept" press=".onRequest" class="btncreate"/>
                        </l:HorizontalLayout>
                    </content>
                </Panel>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
