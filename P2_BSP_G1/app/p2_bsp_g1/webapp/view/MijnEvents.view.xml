<mvc:View controllerName="p2bspg1.controller.MijnEvents" displayBlock="true" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page id="MijnEvents" title="Mijn Evenementen">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" width="100%">
                <Table id="InschrijvingTable" selectionChange=".onSelectionChange" inset="false" items="{ path: '/Inschrijvingen'}">
                    <infoToolbar>
                        <OverflowToolbar visible="false" id="idInfoToolbar">
                            <Label id="idFilterLabel" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Naam sessie"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Datum"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Tijdstip"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Locatie"/>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem vAlign="Middle" type="Navigation" press="handleListPress">
                            <cells>
                                <ObjectIdentifier title="{sessieID/naam}" text="{sessieID/evenement/naam} - {sessieID/evenement/beginDatum}" />
                                <Text text="{sessieID/datum}" />
                                <Text text="{sessieID/beginUur} - {sessieID/eindUur}" />
                                <Text text="{sessieID/evenement/locatie}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
